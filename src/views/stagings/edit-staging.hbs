<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Staging</h3>
        </div>
        <div class="card-body">
            <form action="/stagings/edit-staging/{{staging.id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Name" value="{{staging.name}}">
                </div>
                <div class="form-group">
                    <input type="text" name="hour" class="form-control" placeholder="Hour" value="{{staging.hour}}">
                </div>
                <div class="form-group">
                    <select class="form-control" name="theater" class="form-control" placeholder="Theater">
                        <option>Foro Shakespeare</option>
                    </select>
                </div>                
                <div class="from-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>