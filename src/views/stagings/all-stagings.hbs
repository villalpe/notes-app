<div class="row">
    {{#if stagings}}
    {{#each stagings}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <!--<div class="card-title d-flex justify-content-between align-items-center"></div>-->
                        <h6 class="card-title d-flex justify-content-between align-items-center">
                            <strong>Puesta en Escena:</strong>{{ name }}<a href="/stagings/edit/{{id}}"><i class="fas fa-edit"></i></a>
                        </h6>
                        <h7 class="card-title d-flex justify-content-between align-items-center">
                            <strong>Hora:</strong>{{ hour }}
                        </h7>
                        <h7 class="card-title d-flex justify-content-between align-items-center">
                            <strong>Teatro</strong>{{ theater }}
                        </h7>                        
                        <h6>{{ date }}</h6>
                        <form action="/stagings/delete/{{id}}?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger btn-block btn-sm" type="submit">
                                Delete
                            </button>
                        </form>
                </div>
            </div>
        </div>
        {{else}}
            <div class="card mx-auto">
                <div class="card-body">
                    <h5>Hi {{user.name}}</h5>
                    <p class="lead">There are not theaters yet!</p>
                    <a href="/stagings/add" class="btn btn-success btn-block">Create One!</a>
                </div>
            </div>    
    {{/each}}
    {{/if}}
</div>